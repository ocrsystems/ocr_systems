{
  "name": "ocr_systems",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix && rm -rf ./dist && mkdir dist && mkdir ./dist/client",
    "build": "npm run prebuild && tsc && cp -a ./src/client/views/. ./dist/client/views && cp -a ./src/client/public/. ./dist/client/public && mkdir ./dist/tmp",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/index.ts",
    "test:lint": "eslint .",
    "clean": "rm -rf ./dist"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bunyan": "^1.8.12",
    "dotenv": "^8.2.0",
    "ejs": "~2.6.1",
    "ejs-mate": "^3.0.0",
    "express": "~4.17.3",
    "fs": "0.0.1-security",
    "http-errors": "~1.6.3",
    "multer": "^1.4.2",
    "node-tesseract": "^0.2.7",
    "node-tesseract-ocr": "2.0.0",
    "nodemon": "2.0.20",
    "request": "^2.79.0",
    "typescript": "4.0.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/multer": "^1.4.5",
    "@types/node": "^14.14.35",
    "@types/request": "^2.48.5",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "4.1.0",
    "@typescript-eslint/parser": "4.1.0",
    "babel-eslint": "10.0.1",
    "core-js": "3.0.0-beta.11",
    "eslint": "7.8.1",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-json": "2.1.2",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-security": "1.4.0",
    "husky": "^5.1.3",
    "nodemon": "2.0.20",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
