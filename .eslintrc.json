{
  "extends": "airbnb-base",
  "plugins": [
    "import"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": false,
    "codeFrame": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ],
        "extensions": [
          ".js",
          ".ts"
        ]
      }
    }
  },
  "rules": {
    "no-console": "off",
    "max-len": "off",
    "import/newline-after-import": "off",
    "import/prefer-default-export": "off",
    "lines-around-directive": "off",
    "strict": "off",
    "no-nested-ternary": "off",
    "no-restricted-syntax": "off",
    "comma-dangle": "off",
    "one-var": "off",
    "no-unused-expressions": "off",
    "prefer-arrow-callback": "off",
    "no-use-before-define": "off",
    "arrow-parens": "off",
    "no-confusing-arrow": "off",
    "quote-props": "off",
    "no-plusplus": "off",
    "camelcase": "off",
    "no-else-return": "off",
    // "func-names": 0,
    "eol-last": "off",
    "arrow-body-style": "off",
    "no-await-in-loop": "off",
    "guard-for-in": "off",
    "no-loop-func": "off",
    "no-param-reassign": "off",
    "linebreak-style": "off",
    "no-any": {
      "severity": "warning"
    },
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  }
}