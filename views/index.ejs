<body>
  <div class="container">
    <h1><%= title %></h1>
    <form class="was-validated" action="" method="POST" id="uploadForm">
      <div class="form-group">
        <select id="langSelect" class="custom-select" required>
          <option value="">Choose language</option>
          <option value="en">English</option>
          <option value="ru">Russian</option>
        </select>
        <div class="invalid-feedback">Select language</div>
      </div>

      <div class="custom-file">
        <input type="file" class="custom-file-input" onchange="previewFile()" id="validatedCustomFile" name="image"
          accept="image/*" required>
        <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
        <!-- <div class="invalid-feedback">Example invalid custom file feedback</div> -->
      </div>
      <!-- <input type="submit" id="submit_btn"> -->
      <button class="btn" type="button" onclick="ajaxRequest()">Change Content</button>
      <img id="image_preview" src="https://sanitationsolutions.net/wp-content/uploads/2015/05/empty-image.png"
        height="200" alt="Image preview...">

    </form>
  </div>
  <h1 id="status"></h1>
</body>

